<!-- Projects-->
<section class="projects-section d-lg-flex align-items-center" id="projects">
    <div class="container my-5 py-5">
        <div class="row no-gutters">
            {{#projects}}
                <div class="col-lg-4 col-sm-6 my-3 my-md-0">
                    <a class="project-box" onclick="openModal({{no}})" id="open{{no}}">
                        <img class="img-fluid w-100 h-100" src="assets/img/projects/thumbnails/{{id}}.jpg" alt=""/>
                        <div class="project-box-caption bg-info position-absolute d-flex justify-content-center align-items-center flex-column w-100 h-100">
                            <div class="project-category text-white-50">{{category}}</div>
                            <div class="project-name text-white">{{name}}</div>
                        </div>
                    </a>
                    {{> modules/project-modal}}
                </div>
            {{/projects}}
            <div class="col-lg-4 col-sm-6">
                <a class="" href="#">
                    <div class="bg-secondary w-100 h-100 text-center d-flex justify-content-center align-items-center">
                        <p class="text-white text-uppercase">See More</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
