<div class="col-6 col-md-3 col-lg-2">
    <div class="card mr-md-3 h-100">
        <div class="card-body text-center d-flex flex-column justify-content-around align-items-center">
            <img class="img-fluid w-25 h-25 my-1" src="{{logo}}" alt=""/>
            <h6 class="text-uppercase my-1">{{name}}</h6>
            <div class="progress w-100">
                <div class="progress-bar {{color}}" role="progressbar" style="width: {{level}}%" aria-valuenow="{{level}}" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="small text-black-50 my-1">{{proficiency}}</div>
        </div>
    </div>
</div>