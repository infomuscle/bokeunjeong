<section id="skills" class="skills section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Skills</h2>
        </div>

        <div class="row skills-content">
            <h3 class="skills-title">Work</h3>
            {{#workSkills.entrySet}}
                <div class="col-lg-3">
                    <h4>{{key}}</h4>
                    {{#value}}
                        <div class="progress">
                            <span class="skill">{{name}}<i class="val p{{proficiency}}" data-bs-toggle="tooltip" data-bs-placement="top" title="Guide">{{proficiency}}</i></span>
                        </div>
                    {{/value}}
                </div>
            {{/workSkills.entrySet}}
        </div>

        <div class="row skills-content">
            <h3 class="skills-title">Personal</h3>
            {{#personalSkills.entrySet}}
                <div class="col-lg-3">
                    <h4>{{key}}</h4>
                    {{#value}}
                    <div class="progress">
                        <span class="skill">{{name}}<i class="val p{{proficiency}}" data-bs-toggle="tooltip" data-bs-placement="top" title="Guide">{{proficiency}}</i></span>
                    </div>
                    {{/value}}
                </div>
            {{/personalSkills.entrySet}}
        </div>
    </div>
</section>